{
    "manifest_version": 2,
    "name": "PXI Fusion",
    "version": "1.0",
    "description": "Chrome extension for PXI Fusion.",
    "permissions": [
      "tabs",
      "https://sso.prodigygame.com/premises/",
      "*://math.prodigygame.com/*",
      "*://*.prodigygame.com/*",
      "webNavigation",
      "webRequest",
      "webRequestBlocking"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true  // Change to persistent background page
    },
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Go to Prodigy",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://math.prodigygame.com/*"],
        "js": ["block.js"],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      "fetchAndRun.js"
    ]
  }
  